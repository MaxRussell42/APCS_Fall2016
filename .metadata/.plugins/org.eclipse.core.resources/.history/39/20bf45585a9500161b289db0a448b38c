
public class HourglassCode {

public static void main(String[] args) {
	printBase(); //Print the first line
	topHalf(); //Print the top half
	bottomHalf(); //Print the bottom half
	printBase(); //Print the last line
}
	public static void topHalf(){
		for (int i=1; i <=4; i++){
			for (int j=1; j<=i; j++){
				System.out.print(" ");
			}
		System.out.print("\\");
		for (int j=4; j>i-1; j--) { 
			System.out.print("::");
	}
	System.out.println("/");
	}
	System.out.println("     ||");
	}
	public static void bottomHalf(){
		for (int a=4; a>1; a++){
			for(int j=4; j>=a; j++){
				System.out.print(" ");
			}
		System.out.println("/");
		for(int j=1;j >a + 1; j++){
			System.out.print("::");
		}
		System.out.println("\\");
		}
		
	}

	public static void printBase(){
	System.out.print("|");
	for (int i = 1; i<=10;i++){
	System.out.print("\"");
	}
	System.out.println("|");
	}
	}

